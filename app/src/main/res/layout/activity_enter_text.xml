<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="How are you feeling today?"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridLayout
        android:id="@+id/moodGrid"
        android:columnCount="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnUpset"
            android:src="@drawable/upset"
            android:background="@drawable/mood_selector_bg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:contentDescription="Upset" />

        <ImageButton
            android:id="@+id/btnDown"
            android:src="@drawable/down"
            android:background="@drawable/mood_selector_bg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:contentDescription="Down" />

        <ImageButton
            android:id="@+id/btnNeutral"
            android:src="@drawable/neutral"
            android:background="@drawable/mood_selector_bg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:contentDescription="Neutral" />

        <ImageButton
            android:id="@+id/btnCoping"
            android:src="@drawable/coping"
            android:background="@drawable/mood_selector_bg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:contentDescription="Coping" />

        <ImageButton
            android:id="@+id/btnElated"
            android:src="@drawable/elated"
            android:background="@drawable/mood_selector_bg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:contentDescription="Elated" />

    </GridLayout>

    <EditText
        android:id="@+id/inputNote"
        android:hint="Add a note (optional)"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSaveMood"
        android:text="Save"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
