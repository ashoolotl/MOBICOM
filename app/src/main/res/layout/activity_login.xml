<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- LOGIN FORM -->
    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Welcome text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi there!"
            android:textColor="#6E2795"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's get you started"
            android:textColor="#6E2795"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <!-- Email field -->
        <EditText
            android:id="@+id/loginEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000"
            android:textColorHint="#6E2795"/>

        <!-- Password field -->
        <EditText
            android:id="@+id/loginPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:textColor="#000000"
            android:textColorHint="#6E2795"/>

        <!-- Login button -->
        <Button
            android:id="@+id/submitLoginButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="40dp"
            android:padding="12dp"
            android:background="@drawable/rounded_button"/>

        <!-- Show Register button -->
        <Button
            android:id="@+id/btnShowRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:background="@android:color/transparent"
            android:textColor="@color/colorMagenta" />
    </LinearLayout>

    <!-- REGISTER FORM -->
    <LinearLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textColor="#6E2795"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:gravity="center" />

        <!-- Name field -->
        <EditText
            android:id="@+id/regNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000"
            android:textColorHint="#6E2795" />

        <!-- Age field -->
        <EditText
            android:id="@+id/regAgeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000"
            android:textColorHint="#6E2795" />

        <!-- Email field -->
        <EditText
            android:id="@+id/regEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000"
            android:textColorHint="#6E2795" />

        <!-- Password field -->
        <EditText
            android:id="@+id/regPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:textColor="#000000"
            android:textColorHint="#6E2795" />

        <!-- Register button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:background="@drawable/rounded_button" />

        <!-- Back to login -->
        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:background="@android:color/transparent"
            android:textColor="@color/colorMagenta"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>
