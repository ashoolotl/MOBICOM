<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/summaryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mood Summary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#6E2795"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Mood Cards in Grid -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center">

        <!-- Upset -->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/timeline_entry_bg">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/upset"
                android:contentDescription="Upset" />

            <TextView
                android:id="@+id/upsetCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upset"
                android:textColor="#6E2795"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Down -->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/timeline_entry_bg">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/down"
                android:contentDescription="Down" />

            <TextView
                android:id="@+id/downCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Down"
                android:textColor="#6E2795"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Neutral -->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/timeline_entry_bg">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/neutral"
                android:contentDescription="Neutral" />

            <TextView
                android:id="@+id/neutralCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neutral"
                android:textColor="#6E2795"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Coping -->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/timeline_entry_bg">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/coping"
                android:contentDescription="Coping" />

            <TextView
                android:id="@+id/copingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coping"
                android:textColor="#6E2795"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Elated -->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/timeline_entry_bg">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/elated"
                android:contentDescription="Elated" />

            <TextView
                android:id="@+id/elatedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elated"
                android:textColor="#6E2795"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </GridLayout>

    <!-- Bar Chart -->
    <com.mobicom.s17.mco2.BarChart
        android:id="@+id/customBarChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center" />

</LinearLayout>
