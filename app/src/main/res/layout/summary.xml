<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mood Summary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#6E2795"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Mood Cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Coping -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/timeline_entry_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/coping"
                    android:contentDescription="Coping mood"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coping: 3"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Elated -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/timeline_entry_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/elated"
                    android:contentDescription="Elated mood"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elated: 1"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Down -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/timeline_entry_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/down"
                    android:contentDescription="Down mood"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Down: 2"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- PieChart -->
    <com.mobicom.s17.mco2.PieChart
        android:id="@+id/customPieChart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"
        android:background="#FFFFFF" />

</LinearLayout>
